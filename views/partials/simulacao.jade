form(role="form")
  .form-group
    label(for="plan") Plano 
    select.form-control#plan(ng-model="plan", required="required", ng-options="p.descricao for p in plans")
      option
  
  .form-group
    label Origem/Destino
    select.form-control(ng-model="origin", required="required", ng-options="t.descricao for t in taxes")
      option
  .form-group
    label Tempo da ligação em minutos 
    input(type="number", ng-model="time")

  button.btn.btn-success(type="button", data-dismiss="modal", ng-click="simulate()") Calcular

  {{message}}

.clearfix

hr

.jumbotron(ng-show="displayResult > 0")
  h1 Simulação

  p Com FaleMais: {{result.withPlan | currency:"$"}}
  p Sem FaleMais: {{result.withoutPlan | currency:"$"}}

  strong Tarifa por minuto: {{result.taxe | currency:"$"}}, Plano: {{result.plan}}, Minutos: {{result.minutes}}

